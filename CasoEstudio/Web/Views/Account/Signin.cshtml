@using Domain.Account;

@model AccountViewModel

<div class="container">
	<form method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="mb-3">
			<label asp-for="@Model.Email" class="form-label">Email.</label>
			<input type="email" id="email" asp-for="@Model.Email" class="form-control" aria-describedby="emailHelp" />
			<span asp-validation-for="@Model.Email" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="@Model.Password" class="form-label">Password.</label>
			<input type="password" id="password" asp-for="@Model.Password" class="form-control" aria-describedby="passwordHelp" />
			<span asp-validation-for="@Model.Password" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<button type="submit" class="btn btn-success">Signin</button>
		</div>
	</form>
</div>